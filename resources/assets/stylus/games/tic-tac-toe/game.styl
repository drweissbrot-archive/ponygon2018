.game {
	display flex
	flex-wrap wrap
	flex-direction column
	align-items center

	text-align center

	> * {
		margin 2rem auto
	}
}

#link-area {
	white-space nowrap
	overflow hidden
	text-overflow ellipsis
}

#link-area,
.new-game {
	transition transform .5s ease, margin .5s ease
	transform-origin top

	&:not(.--active) {
		transform scaleY(0)
		margin 0
	}
}
