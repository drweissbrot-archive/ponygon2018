.board {
	display grid
	grid-template-columns 10rem 10rem 10rem
	grid-template-rows 10rem 10rem 10rem

	.node {
		width 10rem
		height 10rem

		border-right 2px solid #efefef
		border-bottom 2px solid #efefef

		font-size 6rem
		line-height 10rem

		cursor pointer

		&:nth-child(3),
		&:nth-child(6),
		&:nth-child(9) {
			border-right none
		}

		&:nth-child(7),
		&:nth-child(8),
		&:nth-child(9) {
			border-bottom none
		}
	}
}
