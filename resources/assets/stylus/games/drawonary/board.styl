.drawonary-board {
	.word-to-guess {
		text-align center
		font-weight bold
	}

	.remaining {
		text-align right
	}

	h3 {
		.no-word-length {
			color transparent
		}
	}

	canvas {
		display block
	}
}

.board-and-modal-wrap {
	position relative

	.drawonary-modal {
		position absolute
		background rgba(#000, .6)

		width 100%
		height 100%

		display flex
		justify-content center
		align-items center
		flex-direction column

		.word {
			cursor pointer
		}
	}
}

.board-wrap {
	display grid
	grid-template-columns calc((100% - 800px) / 2 - 4rem) 4rem 800px 4rem calc((100% - 800px) / 2 - 4rem)
}

.round {
	text-align center
	margin 2rem
}
